    "chai-as-promised": "^6.0.0",
    "coverage-percentage": "^0.0.2",
    "deployment-helpers": "git+ssh://git@github.com:holidayextras/deployment-helpers.git",
    "dirty-chai": "^1.2.2",
    "hapi": "16.1.1",
    "istanbul": "^0.4.4",
    "joi": "10.4.1",
    "mocha": "^3.0.2",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.2",
    "sinon-chai": "^2.8.0",
    "standard": "^10.0.1"
  },
  "dependencies": {
    "boom": "4.3.1",
    "lodash": "4.17.4",
    "q": "1.5.0",
    "qs": "6.4.0"
  },
  "standard": {
    "globals": [
      "sinon",
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "sandbox",
      "it",
      "expect"        
    ]
  }
